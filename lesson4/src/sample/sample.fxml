<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml" fx:controller="sample.Controller">
    <VBox>

        <TextArea fx:id="textArea" editable="false" focusTraversable="false">
            <font>
                <Font size="14.0"/>
            </font>
        </TextArea>

        <HBox>

            <TextField fx:id="message" onAction="#sendText" promptText="Напишите что-нибудь..." HBox.hgrow="ALWAYS">
                <font>
                    <Font size="14.0"/>
                </font>
            </TextField>

            <Button onAction="#sendText" text="Отправить">
                <font>
                    <Font size="14.0"/>
                </font>
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
            </Button>

            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </HBox>

        <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>

    </VBox>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
